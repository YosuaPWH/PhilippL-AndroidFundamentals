<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AlertDialogActivity">

    <Button
        android:id="@+id/btnAlert1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Contact"
        app:layout_constraintBottom_toTopOf="@+id/btnAlert2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAlert2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Choice Dialog"
        app:layout_constraintBottom_toTopOf="@+id/btnAlert3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlert1" />

    <Button
        android:id="@+id/btnAlert3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multi Choice Dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlert2" />
</androidx.constraintlayout.widget.ConstraintLayout>